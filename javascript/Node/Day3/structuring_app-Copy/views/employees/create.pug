extend ../layout

block pagecontent
    ul.list-group 
        li.list-group-item 
            a(href="/employees") Back to Books

    .row 
        .col-sm-offset-3.col-sm-6
            form(method="post")
                legend.text-center Add Book Information
                .form-group 
                    label(for="bookid") Book Id 
                    input#bookid.form-control(type="number", placeholder="Enter Book Id", name="bookid",)
                .form-group 
                    label(for="bookname") Book Name 
                    input#bookname.form-control(type="text", placeholder="Enter Book Name", name="bookname",)
                .form-group 
                    label(for="bookisbn") Book Isbn 
                    input#bookid.form-control(type="text", placeholder="Enter Book Isbn", name="bookisbn",)
                .form-group 
                    label(for="bookauthor") Book Author
                    input#bookid.form-control(type="text", placeholder="Enter Book Author", name="bookauthor",)
                .form-group 
                    label(for="bookpages") Book Pages 
                    input#bookid.form-control(type="number", placeholder="Enter Book Pages", name="bookpages",)
                .row 
                    .col-sm-6 
                        button.btn.btn-block.btn-primary(type="submit") Submit
                    .col-sm-6 
                        button.btn.btn-block.btn-default(type="reset") Reset